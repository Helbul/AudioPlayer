<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_20dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@id/button_previous"
        app:layout_constraintEnd_toStartOf="@+id/text_track_length"
        app:layout_constraintStart_toStartOf="@id/button_previous"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/text_track_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/text_name"
        app:layout_constraintEnd_toEndOf="@id/button_next"
        app:layout_constraintStart_toEndOf="@id/text_name"
        app:layout_constraintTop_toTopOf="@id/text_name"
        />


    <ImageButton
        style="@style/MyImageButtonStyle"
        android:id="@+id/button_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name"
        app:srcCompat="@android:drawable/ic_media_previous" />


    <ImageButton
        style="@style/MyImageButtonStyle"
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        app:layout_constraintStart_toEndOf="@+id/button_previous"
        app:layout_constraintEnd_toStartOf="@id/button_pause"
        app:layout_constraintTop_toTopOf="@id/button_previous"/>


    <ImageButton
        style="@style/MyImageButtonStyle"
        android:id="@+id/button_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_pause"
        app:layout_constraintStart_toEndOf="@+id/button_play"
        app:layout_constraintTop_toTopOf="@id/button_previous"
        app:layout_constraintEnd_toStartOf="@+id/button_next"/>


    <ImageButton
        style="@style/MyImageButtonStyle"
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_next"
        app:layout_constraintStart_toEndOf="@id/button_pause"
        app:layout_constraintTop_toTopOf="@id/button_previous"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>