<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_notification"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notification_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/text_size"
        android:textColor="@color/button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            style="@style/MyImageButtonStyle"
            android:id="@+id/notification_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_media_previous"/>


        <ImageButton
            style="@style/MyImageButtonStyle"
            android:id="@+id/notification_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_media_play"/>


        <ImageButton
            style="@style/MyImageButtonStyle"
            android:id="@+id/notification_pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_media_pause"/>


        <ImageButton
            style="@style/MyImageButtonStyle"
            android:id="@+id/notification_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_media_next"/>

    </LinearLayout>
</LinearLayout>